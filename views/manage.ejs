<div class="row row-margin-top">
<table class="table table-striped">
  <caption>图书信息</caption>
  <thead>
    <tr>
    <th>id</th>
      <th>名称</th>
      <th>余量</th>
      <th>价格</th>
    </tr>
  </thead>
  <tbody>
    <% Books.forEach(function(Book){ %>
    <tr>
		<td><%= Book._id %></td>
		<td><%= Book.name %></td>
		<td><%= Book.price %></td>
		<td><%= Book.amount %></td>
		<td><button type="button" class="btn btn-default" onclick="javascript:location.href='delete/<%= Book.name%>'" >删除</button>
		<td><button type="button" class="btn btn-default" onclick="javascript:location.href='updat/<%= Book.name%>'" >更新</button>
     </tr>
    <% }); %>
   		
    </tr>
   
  </tbody>
</table>
